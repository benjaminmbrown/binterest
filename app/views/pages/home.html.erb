<% if user_signed_in? %>

<div class="hero-unit">
    	<h1>Hi <%= current_user.name %></h1>
			<p>Bin some stuff now yo!</p>
			<% @users = User.all %>
			<% @users.each do |user| %>
  			<%= user.email %><br/>
			<% end %>
</div>


<% else %>


<div class="hero-unit">
    	<h1>Welcome to Binterest</h1>
			<p>Start Binning stuff now!</p>
			<%= link_to "Sign Up Now!", new_user_registration_path, class: "btn btn-primary btn-large" %>
<h3>Check out all our users</h3>

<% @users = User.all %>
<% @users.each do |user| %>
<%= user.name %><br/>
<% end %>
	
	
</div>

<% end %>

